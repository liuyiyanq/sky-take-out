<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into dish(name, category_id, price, image, description, status, create_time, update_time, create_user, update_user)
            VALUES
        (#{name}, #{categoryId}, #{price}, #{image}, #{description}, #{status}, #{createTime}, #{updateTime}, #{createUser}, #{updateUser})
    </insert>

    <resultMap id="DishVOResultMap" type="com.sky.vo.DishVO">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="categoryId" column="category_id"/>
        <result property="price" column="price"/>
        <result property="image" column="image"/>
        <result property="description" column="description"/>
        <result property="status" column="status"/>
        <result property="updateTime" column="update_time"/>
        <result property="categoryName" column="categoryName"/>
        <collection property="flavors" ofType="com.sky.entity.DishFlavor">
            <id property="id" column="flavor_id"/>
            <result property="name" column="flavor_name"/>
            <result property="value" column="flavor_value"/>
        </collection>
    </resultMap>

    <select id="pageQuery" resultMap="DishVOResultMap">
        SELECT
            d.*,
            c.name AS categoryName,
            f.id AS flavor_id,
            f.name AS flavor_name,
            f.value AS flavor_value
        FROM
            dish d
                LEFT JOIN
            category c ON d.category_id = c.id
                LEFT JOIN
            dish_flavor f ON d.id = f.dish_id
        <where>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="categoryId != null">
                and d.category_id = #{categoryId}
            </if>
            <if test="status != null">
                and d.status = #{status}
            </if>
        </where>
        ORDER BY
            d.create_time DESC
    </select>



</mapper>
